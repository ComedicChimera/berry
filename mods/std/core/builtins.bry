module core;

pub type byte = u8;
pub type rune = i32;

/* ------------------------------------------------------------------------- */

pub func abs(n: i64) i64 {
    if n < 0 {
        return -n;
    }

    return n;
}

pub func min(a, b: i64) i64 {
    if a < b {
        return a;
    } 

    return b;
}

pub func max(a, b: i64) i64 {
    if a < b {
        return b;
    }

    return a;
}